    <!-- JavaScript -->
    <script nonce="<%= nonce %>">
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add hover effects to update cards
        document.querySelectorAll('.hover-lift').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-4px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Add subtle animation to latest release card
        const latestReleaseCard = document.querySelector('.glass-panel.shadow-glow');
        if (latestReleaseCard) {
            latestReleaseCard.addEventListener('mouseenter', function() {
                this.style.boxShadow = '0 0 25px rgba(59, 130, 246, 0.2)';
            });
            
            latestReleaseCard.addEventListener('mouseleave', function() {
                this.style.boxShadow = '0 0 20px rgba(59, 130, 246, 0.15)';
            });
        }
    </script>
