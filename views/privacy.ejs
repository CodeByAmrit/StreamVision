    <script nonce="<%= nonce %>">
      // Theme Toggle
      document.getElementById("theme-toggle").addEventListener("click", function () {
        if (document.documentElement.classList.contains("dark")) {
          document.documentElement.classList.remove("dark");
          localStorage.setItem("theme", "light");
        } else {
          document.documentElement.classList.add("dark");
          localStorage.setItem("theme", "dark");
        }
      });

      // Check for saved theme preference
      if (
        localStorage.getItem("theme") === "dark" ||
        (!localStorage.getItem("theme") && window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }

      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute("href"));
          if (target) {
            target.scrollIntoView({
              behavior: "smooth",
              block: "start",
            });

            // Update active state in navigation
            document
              .querySelectorAll(
                "#introduction, #rtsp-processing, #data-usage, #security, #cookies, #rights, #contact"
              )
              .forEach((section) => {
                const link = document.querySelector(`a[href="#${section.id}"]`);
                if (link) {
                  link.className = link.className.replace(
                    "text-blue-600 dark:text-blue-400 border-l-4 border-blue-500",
                    "text-gray-700 dark:text-gray-300"
                  );
                  link.className = link.className.replace("border-l-4 border-blue-500", "");
                }
              });

            const activeLink = document.querySelector(
              `a[href="#${this.getAttribute("href").substring(1)}"]`
            );
            if (activeLink) {
              activeLink.className = activeLink.className.replace(
                "text-gray-700 dark:text-gray-300",
                "text-blue-600 dark:text-blue-400"
              );
              activeLink.className += " border-l-4 border-blue-500 pl-4";
            }
          }
        });
      });

      // Update active section on scroll
      const sections = document.querySelectorAll(
        "#introduction, #rtsp-processing, #data-usage, #security, #cookies, #rights, #contact"
      );
      const navLinks = document.querySelectorAll('nav a[href^="#"]');

      window.addEventListener("scroll", () => {
        let current = "";
        sections.forEach((section) => {
          const sectionTop = section.offsetTop;
          const sectionHeight = section.clientHeight;
          if (scrollY >= sectionTop - 100) {
            current = section.getAttribute("id");
          }
        });

        navLinks.forEach((link) => {
          link.classList.remove(
            "text-blue-600",
            "dark:text-blue-400",
            "border-l-4",
            "border-blue-500",
            "pl-4"
          );
          link.classList.add("text-gray-700", "dark:text-gray-300");
          if (link.getAttribute("href") === `#${current}`) {
            link.classList.remove("text-gray-700", "dark:text-gray-300");
            link.classList.add(
              "text-blue-600",
              "dark:text-blue-400",
              "border-l-4",
              "border-blue-500",
              "pl-4"
            );
          }
        });
      });

      // Section hover effects
      document.querySelectorAll(".section-transition").forEach((section) => {
        section.addEventListener("mouseenter", () => {
          section.classList.add("hover-lift");
        });

        section.addEventListener("mouseleave", () => {
          section.classList.remove("hover-lift");
        });
      });
    </script>
